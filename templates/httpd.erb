NameVirtualHost <%= @ipaddress %>:80

<VirtualHost <%= @ipaddress %>:80 >
ServerAdmin <%= scope.lookup('rstudio::email' %>
ServerName <%= @fqdn %>

ProxyRequests Off

<Proxy *>
    Order allow,deny
    Allow from all
</Proxy>

ProxyPass / http://localhost:<%= scope.lookup('rstudio::port') %>/
ProxyPassReverse / http://localhost:<%= scope.lookup('rstudio::port') %>/
</VirtualHost>
