NameVirtualHost <%= @ipaddress %>:80

<VirtualHost <%= @ipaddress %>:80 >
ServerAdmin <%= params::email %>
ServerName <%= @fqdn %>

ProxyRequests Off

<Proxy *>
    Order allow,deny
    Allow from all
</Proxy>

ProxyPass / http://localhost:<%= params::port %>/
ProxyPassReverse / http://localhost:<%= params::port %>/
</VirtualHost>
